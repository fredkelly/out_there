!!!
%html
  %head
    %title Out There
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
      %nav
        %ul
          %li= link_to 'Review', root_path, class: ('active' if current_page?(root_path))
          %li= link_to 'Submissions', ideas_path, class: ('active' if current_page?(ideas_path))
    = yield
